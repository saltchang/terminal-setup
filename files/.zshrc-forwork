# Alias

alias ll='ls -hlF'
alias la='ls -ahlF'
alias cp='cp -iv'
alias mv='mv -iv'
alias python='python3'
alias gogo='cl $GOPATH'
alias goco='cl ~/saltCode'
alias life='cl ~/saltCode/works_of_17life'
alias codego='cl $GOPATH/src/github.com/saltchang && code .'

# For work
alias relife='sh /Users/david_chang/saltCode/shell_script/recard.sh'
alias reuat='sh /Users/david_chang/saltCode/shell_script/recard-uat.sh'
alias redev='sh /Users/david_chang/saltCode/shell_script/recard-dev.sh'


# Shortcut command
alias f='open -a Finder ./'
alias c='clear'

# Replace "rm" command to trash for safety
alias rm='echo "Please use the command: \"junk\" for safety."'
junk() {
    mv "$1" ~/.Trash/
}

cl() {
    cd "$1" && la
}

clearTrash() {
    \rm -rf ~/.Trash/*
}

